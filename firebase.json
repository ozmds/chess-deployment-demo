{
  "hosting": {
    "site": "minymal",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
        {
            "source": "/chess/api/**",
            "run": {
                "serviceId": "chessapi",
                "region": "us-east1"
            }
        },
        {
            "source": "**",
            "destination": "/index.html"
        }
    ]
  }
}
