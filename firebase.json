{
  "hosting": {
    "public": "./minymal-chess/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
        {
            "source": "/api/**",
            "run": {
                "serviceId": "chessapi",
                "region": "us-east1"
            }
        },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
